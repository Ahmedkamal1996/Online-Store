@using OnlineStore.Models;
@model RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header_section_top">

    <h2 style="text-align: center; color: white; font: 35px fantasy; color: white"> Assign Role To User </h2>
</div>
.
<br />
<br />


@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4> Create a New Account</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })



    <div class="form-group">
        @Html.Label("Select Role", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>



    <div class="form-group">
        @Html.Label("Select User", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name")
        </div>
    </div>

    <div class="form-group">
       
        <div class="col-md-offset-2 col-md-10">
           <input type="submit" class="btn btn-default btn-dark btn-primary" value="Assign Role"/>
        </div>
    </div>

}