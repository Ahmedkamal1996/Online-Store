@using OnlineStore.BLL.ViewModels.Order;
@model List<GetOrderViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box_main" style="height: auto">
            <table class=" table">
                <thead class="thead-dark">
                    <tr>

                        <th scope="col">Order Status</th>
                        <th scope="col">Date Of Order</th>
                        <th scope="col">User Id</th>
                        <th scope="col">Change Order Status</th>
                        <th scope="col">Cancel Order</th>

                    </tr>
                </thead>
                @{
                    
                    foreach (var item in Model)
                    {

                        <tbody>
                                            <tr>

                                                <td>@item.Status</td>
                                                <td>@item.CreatedDate</td>
                                                <td>@item.UserId</td>
                                                <td>
                                                    <div class="btn_main">
                                                        <div class="btn-primary" style="text-align: center">
                                                            <a href="@Url.Action("ChangeStatus", "Order",new{orderId=item.Id})"> ChangeStatus</a>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="btn_main">
                                                        <div class="btn-danger" style="text-align: center">
                                                            <a href="@Url.Action("CancelStatus", "Order",new{orderId=item.Id})"> Cancel</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                        </tbody>
                    }
                }
            </table>
           

            

        </div>
    </div>
</div>


